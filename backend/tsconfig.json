{
  "extends": "../tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "logs"],
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node", "express"],
    "noEmit": true,
    "allowJs": true,
    "allowImportingTsExtensions": false
  }
}
